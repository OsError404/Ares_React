# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/hearing-management

# JWT Configuration
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=1d

